    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Recommendation.
    -->
    <changeSet id="20241113212037-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="student_id"
                                 baseTableName="recommendation"
                                 constraintName="fk_recommendation__student_id"
                                 referencedColumnNames="id"
                                 referencedTableName="student"/>

        <addForeignKeyConstraint baseColumnNames="teacher_id"
                                 baseTableName="recommendation"
                                 constraintName="fk_recommendation__teacher_id"
                                 referencedColumnNames="id"
                                 referencedTableName="teacher"/>
    </changeSet>
</databaseChangeLog>
